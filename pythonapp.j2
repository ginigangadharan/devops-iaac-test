#! /bin/bash
### BEGIN INIT INFO
# Provides: Python app
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Python App
# Description: This file starts and stops Python App
# 
### END INIT INFO


case "$1" in
 start)
     su vagrant -c 'cd /webapps/devops/; python app.py&'
  ;;

 stop)
     kill -9 `ps -ef |grep app |grep -v grep |awk '{print $2}'`
  ;;

 *)
   echo "Usage: pythonapp start|stop"
  exit 3
  ;;

esac
